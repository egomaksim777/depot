<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>The Bookshelf</h1>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <%= link_to image_tag(product.image_url), product %>
          <h2><%= link_to product.title, product %></h2>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            <%= number_to_currency(product.price) %>
            <%= button_to 'Add to Cart', line_items_path(product_id: product) %>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
<% if @session >= 5 %>
  <p>
    <b><em><%= 'This page has been visited ' + pluralize(@session, 'time') + '.' %><em></b>
  </p>
<% end %>
