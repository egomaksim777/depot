<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<ul class="catalog">
  <% @products.each do |product| %>
    <li>
      <%= link_to image_tag(product.image_url), product %>
      <h2><%= link_to product.title, product %></h2>
      <p>
        <%= sanitize(product.description) %>
      </p>
      <div class="price">
        <%= product.price %>
      </div>
    </li>
  <% end %>
</ul>
