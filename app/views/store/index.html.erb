<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>

<h1>The Bookstore</h1>

<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <li>
          <%= link_to image_tag(product.image_url), product %>
          <h2><%= link_to product.title, product %></h2>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            <%= number_to_currency(product.price) %>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
